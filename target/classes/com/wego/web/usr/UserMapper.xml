<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.wego.web.usr.UserMapper">
    <select id="selectUserByIdPw" resultType="User" parameterType="com.wego.web.usr.User">
        SELECT * 
        FROM USER 
        WHERE UID LIKE #{uid}
        and pwd like #{pwd}
    </select>
  
    <insert id="insertUser">
        insert into user (UID,PWD,UNAME)
        values(#{uid},#{pwd},#{uname})
    </insert>

</mapper>